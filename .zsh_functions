echo '--Loading ~/.zsh_functions--'

# History incremental search using fzf
function fzf-history-selection() {
    BUFFER=`history -n 1 | fzf --tac`
    #BUFFER=`history -n 1 | tac | peco`
    CURSOR=$#BUFFER
    zle reset-prompt
}

zle -N fzf-history-selection  # bindkeyで編集可能にする
bindkey '^R' fzf-history-selection  # ctrl+rでヒストリのインクリメンタル検索

